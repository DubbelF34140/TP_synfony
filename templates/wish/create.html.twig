{% extends 'base.html.twig' %}

{% block title %}Ajouter un Wish{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">
                        <h2>Ajouter un Wish</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(wishForm, {'attr': {'novalidate': 'novalidate'}}) }}

                        {{ form_errors(wishForm.image) }}

                        <div class="form-group mb-3">
                            {{ form_label(wishForm.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(wishForm.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(wishForm.title, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(wishForm.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(wishForm.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(wishForm.description, {'attr': {'class': 'text-danger'}}) }}
                        </div>


                        {{ form_row(wishForm.image) }}

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Envoyer !</button>
                        </div>

                        {{ form_end(wishForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
